<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="sample">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>


         <class>com.melek.yilmaz.human.entity.Departmant</class>
         <class>com.melek.yilmaz.human.entity.Employee</class>
         
         <class>com.melek.yilmaz.human.test.RelationPersist</class>
         
         
         <class>com.melek.yilmaz.inventory.entity.Product</class>
         
         
         
         <class>com.melek.yilmaz.inventory.test.ProductFind</class>
         <class>com.melek.yilmaz.inventory.test.ProductMerge</class>
         <class>com.melek.yilmaz.inventory.test.ProductPersist</class>
         <class>com.melek.yilmaz.inventory.test.ProductRemove</class>
         <class>com.melek.yilmaz.inventory.test.QueryAggregate</class>
         <class>com.melek.yilmaz.inventory.test.QueryAggregation</class>
         <class>com.melek.yilmaz.inventory.test.QueryAggregationSum</class>
         <class>com.melek.yilmaz.inventory.test.QueryAggregationScaler</class>
         <class>com.melek.yilmaz.inventory.test.QueryList</class>
         <class>com.melek.yilmaz.inventory.test.singleQuery</class>
         
          
        <class>com.melek.yilmaz.jpabasic.Data</class>
        <class>com.melek.yilmaz.jpabasic.test</class>
        
        


        <properties>
            <property name="javax.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/jpadb?useSSL=false&amp;useLegacyDatetimeCode=false&amp;
     serverTimezone=Turkey"/>






            <property name="javax.persistence.jdbc.user" value="root" />

            <property name="javax.persistence.jdbc.password" value="" />

            <property name="javax.persistence.schema-generation.database.action"
                      value="none" />


        </properties>
    </persistence-unit>
</persistence>